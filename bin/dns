#!/usr/bin/env bash
# dotfiles/bin/dns

# dns.sh
  # Get the IP address of a domain using DNS over HTTPS
  # https://developers.cloudflare.com/1.1.1.1/dns-over-https/json-format/
  # Symlink to /usr/local/bin/dns
  # alias dns='dns'


### Define Colours ###
tput sgr0; 
# reset colors

readonly RESET=$(tput sgr0)
readonly BOLD=$(tput bold)

readonly RED=$(tput setaf 1)
readonly ORANGE=$(tput setaf 3)
readonly GREEN=$(tput setaf 64)
### END Colours ###


function usage {

  echo "Usage: ./dns.sh {domain} [record_type]"
  echo "Record Type: A (default) or AAAA"
  exit 0
}


function get_ip {

  if ! [[ "${record_type}" =~ ^(A|AAAA)$ ]]; then
    echo "${RED}[FATAL]${RESET} Record Type must be 'A' for IPv4 or 'AAAA' for IPv6"
    exit 1
  fi
  
  ip=$(curl -s -H "accept: application/dns-json" "https://cloudflare-dns.com/dns-query?name=${domain}&type=${record_type}" \
    | jq -r '.Answer[-1].data')
}


function main {

  domain=${1:-""}
  record_type=${2:-"A"}

  if [[ -z "${domain}" ]]; then
    usage
  fi

  get_ip

  echo "${GREEN}Domain:${RESET} ${domain}"
  echo "${ORANGE}    IP:${RESET} ${ip}"
}

main "$@"
