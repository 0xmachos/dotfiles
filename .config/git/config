	# Full name recorded in newly created commits
	email = 0xmachos@gmail.com
	# Email address recorded in newly created commits
	signingkey = ~/.ssh/id_ecdsa-sha2-nistp256_quantum.pub
	# Secure Enclave key via Secretive
	# TODO: Switch to ssh-mldsa-87 when:
	#   1. IETF drafts (draft-sfluhrer-ssh-mldsa, draft-rpe-ssh-mldsa) become RFCs
	#   2. OpenSSH adds ML-DSA signature support (currently only ML-KEM for key exchange)
	#   3. GitHub accepts ML-DSA SSH keys for commit signature verification

[commit]
	gpgsign = true

