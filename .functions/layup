#!/usr/bin/env zsh
# dotfiles/.functions/layup

function layup {

  echo "[ğŸº] Updating tlmgr and all installed LaTeX packages"
  sleep 2
  
  # Update tlmgr 
  if sudo tlmgr update --self >/dev/null; then
    echo "[âœ…] Successfully updated tlmgr"
  else
    echo "[âŒ] Failed to update tlmgr"
  fi

  # Update packages installed via tlmgr 
  if sudo tlmgr update --all >/dev/null; then
    echo "[âœ…] Successfully updated LaTeX packages via tlmgr"
  else
    echo "[âŒ] Failed to update LaTeX packages via tlmgr"
  fi
}